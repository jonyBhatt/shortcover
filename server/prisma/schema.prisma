generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("MONGODB_URI")
  relationMode = "prisma"
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  fistName String
  lastName String
  dob      String
  phone    String
  country  String
  postCode String
  password String
  Role     String @default("User")

  @@map("users")
}

model VehiclePlateDetails {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  plateNumber String
  desc        String
}
